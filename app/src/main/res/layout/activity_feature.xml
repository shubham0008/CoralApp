<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.Â¸.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FeatureActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="80dp">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Spiral Protect"
    android:textSize="28dp"
    android:textStyle="bold"
    android:padding="20dp"
    android:textAlignment="center"
    android:textColor="@color/colorPrimary"/>
    <ImageView
        android:layout_width="40dp"
        android:padding="5dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_gravity="center"
        android:layout_height="40dp"
        android:id="@+id/iv_logout"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_power"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="20dp"

        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ina"
            android:id="@+id/image_select"
            >
        </ImageView>
        <LinearLayout
            android:layout_width="fill_parent"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/image_select"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="fill_parent"
                android:textSize="18dp"
                android:layout_height="wrap_content"
                android:text="James Bond"/>
            <TextView
                android:layout_width="fill_parent"
                android:textSize="18dp"
                android:layout_height="wrap_content"
                android:text="User ID : AF1234DA"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Diving Credits : 423">

            </TextView>
        </LinearLayout>


    </RelativeLayout>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:elevation="30dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:id="@+id/iv_dive"
                android:layout_width="100dp"
                android:padding="20dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_divein" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@+id/iv_dive"
                android:gravity="center"
                android:text="DIVE"
                android:textSize="35sp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:elevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:id="@+id/iv_report"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_noun_bug" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@+id/iv_report"
                android:gravity="center"
                android:text="REPORT"
                android:textSize="35sp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:elevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:id="@+id/iv_hist"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="fitCenter"
                android:padding="12dp"
                android:src="@drawable/ic_history" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@+id/iv_hist"
                android:gravity="center"
                android:text="HISTORY"
                android:textSize="35sp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>